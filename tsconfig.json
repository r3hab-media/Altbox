{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ES2022",
		"moduleResolution": "Node",
		"lib": ["ES2021", "WebWorker"],
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"types": ["vitest", "@cloudflare/workers-types"],
		"baseUrl": "./"
	},
	"include": ["src/**/*", "test/**/*"]
}
